{
  "name": "页面定时任务",
  "version": "1.0",
  "description": "定时执行当前页面的动作，如刷新、点击和移动等任务，插件通过将JavaScript代码插入到当前页面来控制页面显示和动作交互",
  "permissions": [
    "*://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "timer16.png",
      "32": "timer32.png",
      "48": "timer48.png",
      "128": "timer128.png"
    }
  },
  "icons": {
    "16": "timer16.png",
    "32": "timer32.png",
    "48": "timer48.png",
    "128": "timer128.png"
  },
  "manifest_version": 2
}